<div class="card md-3 style="max-width: 600px;"">
        <div class="row no-gutters-1">
      <div class="col-lg-5">
          <%= attachment_image_tag @post, :post_image, class: "card-img-top-1"%>
          </div>
          
          <div class="col-lg-7">
              
          <div class="card-body-1">
              <div class="form-groupp">
                  <label class="label">出品者</label>
                  <h3 class="card-title-1"><%= link_to @post.user.username,user_path(@post.user)%></h3>
              </div>
              
              
              <div class="form-groupp">
                  <label class="label">商品名</label>
          <h4 class="card-title-1"><%=@post.title%></h4>
          </div>
          <div class="form-groupp">
              <label class="label">教科名</label>
          <h6 class="card-subtitle-1"><%=@post.subject%></h6>
          </div>
          
          <div class="form-groupp">
              <label class="label">先生の名前</label>
          <h6 class="card-subtitle-1"><%=@post.teacher_name%></h6>
          </div>
          
          <div class="form-groupt">
              <label class="label">説明</label>
          <p class="card-text-5"><%=@post.content%></p>
          </div>
         
          <div class="form-groupt">
              <label class="label">値段</label>
              <h6 class="card-subtitle-1"><%=@post.price%>円</h6>
          </div>
          <%= form_with url: buy_post_path do %>
               <script type="text/javascript" src="https://checkout.pay.jp" class="payjp-button" data-key="pk_test_e1efc7d02aa1d56abcfd9715"></script>
          <% end %>   
        </div>
      </div>
    </div>  
</div>  