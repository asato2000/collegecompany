



<%=form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f|  %>
  <%= render "devise/shared/error_messages", resource: resource %>

   <div class="row">
    <div class="col-5">
      
    
     <div class="img-2">
  <%= image_tag 'tea-time.jpg', class: 'rog' %>
  </div>
  </div>
  
  <div class="text-box">
  <h1>Sign In</h1>
  
  
　<div class="form-group-1">
　  <%= f.label :画像%><br />
　  <%= f.attachment_field :user_image, autofocus: true, autocomplete: "photo",class: "form-control" %>
　</div>
  
  <div class="form-group-1">
    <%= f.label :ニックネーム%><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "name", class: "form-control" %>
  </div>
  
  <div class="form-group-1">
    <%= f.label :大学名%><br />
    <%= f.text_field :college, autofocus: true, autocomplete: "organization", class: "form-control"%>
  </div>
  
  <div class="form-group-1">
    <%= f.label :eメール%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="form-group-1">
    <%= f.label :パスワード　6文字でお願いします！%>
    <% if @minimum_password_length %>
    
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-group-1">
    <%= f.label :パスワード確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="actions">
  <%= f.submit "SIGN IN" , class: "btn-1" %>
  
  </div>
<% end %>

<div class="asas">
<%= render "devise/shared/links" %>
  </div>
  </div>
</div>  
</div> 